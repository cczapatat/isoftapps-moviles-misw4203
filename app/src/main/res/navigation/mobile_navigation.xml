<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_album">

    <fragment
        android:id="@+id/navigation_album"
        android:name="miso4203.mobile.app.vinilos.ui.album.AlbumFragment"
        android:label="@string/album_title"
        tools:layout="@layout/fragment_album">
        <action
            android:id="@+id/navigate_to_album_detail"
            app:destination="@+id/navigation_album_detail" />

    </fragment>

    <fragment
        android:id="@+id/navigation_album_create"
        android:name="miso4203.mobile.app.vinilos.ui.album_create.AlbumCreateFragment"
        android:label="@string/album_title"
        tools:layout="@layout/fragment_album_create">
        <action
            android:id="@+id/actionAlbumCreateFragmentToCollectorFragment"
            app:destination="@+id/navigation_collector_detail" />
    </fragment>

    <fragment
        android:id="@+id/navigation_album_detail"
        android:name="miso4203.mobile.app.vinilos.ui.album_detail.AlbumDetailFragment"
        android:label="@string/album_detail"
        tools:layout="@layout/fragment_album_detail">
        <action
            android:id="@+id/navigate_to_albums"
            app:destination="@+id/navigation_album" />
        <action
            android:id="@+id/navigate_to_artist_from_album"
            app:destination="@+id/navigation_artist_detail" />
        <action
            android:id="@+id/actionAlbumDetailFragmentToTrackAddFragment"
            app:destination="@+id/navigation_track_add"/>
        <argument
            android:name="albumId"
            app:argType="integer" />
    </fragment>

    <fragment
        android:id="@+id/navigation_artist"
        android:name="miso4203.mobile.app.vinilos.ui.artist.ArtistFragment"
        android:label="@string/artist_title"
        tools:layout="@layout/fragment_artist">
        <action
            android:id="@+id/navigate_to_artist_detail"
            app:destination="@+id/navigation_artist_detail" />
    </fragment>

    <fragment
        android:id="@+id/navigation_artist_detail"
        android:name="miso4203.mobile.app.vinilos.ui.artist_detail.ArtistDetailFragment"
        android:label="@string/artist_detail"
        tools:layout="@layout/fragment_artist_detail">
        <action
            android:id="@+id/navigate_to_artists"
            app:destination="@+id/navigation_artist" />
        <argument
            android:name="artistId"
            app:argType="integer" />
    </fragment>


    <fragment
        android:id="@+id/navigation_collector"
        android:name="miso4203.mobile.app.vinilos.ui.collector.CollectorFragment"
        android:label="@string/collector_title"
        tools:layout="@layout/fragment_collector">
        <action
            android:id="@+id/navigate_to_collector_detail"
            app:destination="@+id/navigation_collector_detail" />
        <argument
            android:name="collectorId"
            app:argType="integer" />
    </fragment>

    <fragment
        android:id="@+id/navigation_collector_detail"
        android:name="miso4203.mobile.app.vinilos.ui.collector_detail.CollectorDetailFragment"
        android:label="Collector Detail"
        tools:layout="@layout/fragment_collector_detail">
        <action
            android:id="@+id/navigate_to_collectors"
            app:destination="@+id/navigation_collector" />
        <action
            android:id="@+id/actionCollectorDetailFragmentToAlbumCreateFragment"
            app:destination="@+id/navigation_album_create" />
        <action
            android:id="@+id/actionCollectorDetailFragmentToTrackAddFragment"
            app:destination="@+id/navigation_track_add"/>
        <action
            android:id="@+id/navigate_to_album_detail_from_collector"
            app:destination="@+id/navigation_album_detail" />
        <argument
            android:name="collectorId"
            app:argType="integer" />
    </fragment>

    <fragment
        android:id="@+id/navigation_track_add"
        android:name="miso4203.mobile.app.vinilos.ui.track_add.TrackAddFragment"
        android:label="Add Track"
        tools:layout="@layout/fragment_track_add">
        <argument
            android:name="albumId"
            app:argType="integer" />
    </fragment>
</navigation>