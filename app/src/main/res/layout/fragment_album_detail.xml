<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.album_detail.AlbumDetailFragment">

    <ImageView
        android:id="@+id/album_detail_image"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:contentDescription="@string/album_cover_desc"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/album_detail_name"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:textSize="16sp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/album_detail_image"
        tools:text="Rock" />

</androidx.constraintlayout.widget.ConstraintLayout>