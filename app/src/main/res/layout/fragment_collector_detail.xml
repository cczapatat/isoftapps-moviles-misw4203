<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.collector_detail.CollectorDetailFragment"
    android:id="@+id/collector_detail_layout">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:id="@+id/collector_album_title"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent"
            android:paddingLeft="10dp"
            android:background="@color/purple_500"
            tools:ignore="MissingConstraints">

            <TextView
                android:id="@+id/textCollectorAlbumGenre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textColor="@color/teal_700"
                android:textSize="18dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnBack"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:background="@color/purple_500"
                    android:text="@string/x"
                    android:textColor="@color/teal_700"
                    android:textSize="28sp"
                    app:backgroundTint="@color/purple_500" />
            </RelativeLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/collector_album_image"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:contentDescription="@string/collector_album_cover_desc"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toBottomOf="@+id/collector_album_title"
            tools:layout_editor_absoluteX="0dp"
            tools:srcCompat="@tools:sample/avatars" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/collectorAlbumsRv"
            android:layout_width="match_parent"
            android:layout_height="340dp"
            android:paddingBottom="55dp"
            android:paddingTop="25dp"
            app:layout_constraintTop_toBottomOf="@+id/collector_album_image"
            tools:listitem="@layout/collector_album_item"
            android:clickable="false"
            android:contextClickable="false"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCreateAlbum"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="32dp"
            android:text="@string/add_album_btn"
            android:textAlignment="center"
            android:textColor="@color/white"
            app:backgroundTint="@color/teal_700"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/collectorAlbumsRv" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAddTrack"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="32dp"
            android:text="@string/add_track_btn"
            android:textAlignment="center"
            android:textColor="@color/white"
            app:backgroundTint="@color/teal_700"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/collectorAlbumsRv" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
